@*@model MovieRentalApp.Models.Customer*@
@model MovieRentalApp.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control"})
    </div>

    <div class="form-group">
        <label for="Customer.Birthday">Date of Birth</label>
        @Html.TextBoxFor(c => c.Customer.Birthday, new { @class = "form-control" })
        
    </div>

    <div class="custom-checkbox">
        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsletter) Subscribe to news letter?
        </label>
    </div>

    <div class="form-group">
        <label for="Customer.MembershipTypeID">Membership Types</label>
        @Html.DropDownListFor(c => c.Customer.MembershipTypeID, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Memebrship Type", new { @class = "form-control" })

    </div>
}

