@model IEnumerable<MovieRentalApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieIndex</h2>

@if (!Model.Any())
{
    <p>We dont have any movie yet</p>
}
else{
    <div id="box-shadow-effect">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>@Html.ActionLink(movie.Name, "Details", "Movies" ,new { id = movie.Id}, null)</tr>
                    <tr>@movie.Genre.Name</tr>
                }
            </tbody>
        </table>
    </div>
    }