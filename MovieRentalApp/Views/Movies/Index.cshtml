@model MovieRentalApp.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>

@if (!Model.Movie.Any())
{
    <p>We do not have any movie yet</p>
}
else
{
    var num = 0;
    <div id="box-shadow-effect">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th> Movies</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movie)
                {
                    num++;
                    <tr>
                        <td> @Html.ActionLink(movie.Name, "Details", "Movies", new { id = num }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
        

}

