@model IEnumerable<MovieRentalApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


<button style="margin-bottom :15px;" type="button" class="btn btn-info"> @Html.ActionLink("New Movie", "New", "Movies", new { style = "color:white; "}) </button>



@if (!Model.Any())
{
    <p>We dont have any movie yet</p>
}
else
{
    <div id="box-shadow-effect">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                        <td>@movie.Genre.Name</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
}